<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>disable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <ApplicationIcon>Assets\Icons\icon.ico</ApplicationIcon>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <AssemblyName>SteamDebloat</AssemblyName>
    
    <!-- NativeAOT Configuration -->
    <PublishAot>false</PublishAot>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    <!-- <TrimMode>full</TrimMode> Removed to prevent stack corruption/interop issues -->
    <IsAotCompatible>true</IsAotCompatible>
    
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <NoWarn>CA1416;WFAC010;IL2026;IL2104</NoWarn>
    
    <Version>2.1129.1500</Version>
    <AssemblyVersion>2.1129.1500.0</AssemblyVersion>
    <FileVersion>2.1129.1500.0</FileVersion>
    
    <Company>AltRossell</Company>
    <Product>Steam Debloat</Product>
    <Description>Steam Client Optimization and Configuration Tool</Description>
    <Copyright>Copyright © 2025 AltRossell - MIT License</Copyright>
    <Authors>AltRossell, Steam Debloat Contributors</Authors>
    <PackageProjectUrl>https://github.com/AltRossell/Steam-Debloat</PackageProjectUrl>
    <RepositoryUrl>https://github.com/AltRossell/Steam-Debloat</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>steam;optimization;open-source;gaming;performance;debloat</PackageTags>
    <NeutralLanguage>en</NeutralLanguage>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <DebugType>embedded</DebugType>
    <ProjectGuid>{4A2F3D1E-5B6C-7D8E-9F0A-1B2C3D4E5F6A}</ProjectGuid>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="11.2.0" />
    <PackageReference Include="Avalonia.Desktop" Version="11.2.0" />
    <PackageReference Include="Avalonia.Themes.Fluent" Version="11.2.0" />
    <PackageReference Include="Avalonia.Fonts.Inter" Version="11.2.0" />
    <PackageReference Include="FluentAvaloniaUI" Version="2.2.0" />
  </ItemGroup>

  <ItemGroup>
    <AvaloniaResource Include="Assets\Icons\icon.ico" />
    <AvaloniaResource Include="Assets\Icons\optimization.svg" />
    <AvaloniaResource Include="Assets\Icons\options.svg" />
    <AvaloniaResource Include="Assets\Icons\github.svg" />
    <AvaloniaResource Include="Assets\Icons\steam.svg" />
  </ItemGroup>

</Project>