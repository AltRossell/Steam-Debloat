---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Downloads from '../components/Downloads.astro';
import Features from '../components/Features.astro';
import Documentation from '../components/Documentation.astro';
import FAQ from '../components/FAQ.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Steam Debloat - Optimize your Steam experience">
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="mobile-menu md:hidden">
    <div class="flex flex-col h-full">
      <div class="flex justify-between items-center p-6 border-b border-white/10">
        <h2 class="text-xl font-semibold">Menu</h2>
        <button id="mobile-menu-close" class="w-10 h-10 rounded-full glass-apple flex items-center justify-center hover:bg-white/10 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      
      <nav class="flex-1 overflow-hidden flex flex-col">
        <!-- Navigation Links -->
        <div class="px-6 py-4 space-y-4">
          <a href="#home" class="block text-xl font-medium hover:text-steam-accent transition-colors" data-i18n="nav.home">Home</a>
          <a href="#downloads" class="block text-xl font-medium hover:text-steam-accent transition-colors" data-i18n="nav.downloads">Downloads</a>
          <a href="#features" class="block text-xl font-medium hover:text-steam-accent transition-colors" data-i18n="nav.features">Features</a>
          <a href="#docs" class="block text-xl font-medium hover:text-steam-accent transition-colors" data-i18n="nav.docs">Documentation</a>
          <a href="#faq" class="block text-xl font-medium hover:text-steam-accent transition-colors" data-i18n="nav.faq">FAQ</a>
          <a href="https://github.com/AltRossell/Steam-Debloat" target="_blank" class="block text-xl font-medium hover:text-steam-accent transition-colors" data-i18n="nav.github">GitHub</a>
        </div>
        
        <!-- Mobile Language Selector-->
        <div class="border-t border-white/10 flex-1 flex flex-col min-h-0">
          <div class="px-6 pt-6 pb-4 flex-shrink-0">
            <h3 class="text-sm font-medium text-white/60 mb-2 flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 0a9 9 0 019-9m-9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9"/>
              </svg>
              Language / Idioma
            </h3>
            <p class="text-xs text-white/40 mb-4">Select your preferred language</p>
          </div>
          
          <div class="mobile-language-section px-6 pb-6 flex-1 min-h-0">
            <div id="mobile-language-options" class="space-y-3">
              <!-- Populated by JavaScript -->
            </div>
          </div>
        </div>
      </nav>
    </div>
  </div>

  <Header />
  <Hero />
  <Downloads />
  <Features />
  <Documentation />
  <FAQ />
  <Footer />
</Layout>
