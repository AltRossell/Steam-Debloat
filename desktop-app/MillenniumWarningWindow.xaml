<Window x:Class="SteamDebloat.MillenniumWarningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Important Notice"
        Height="460"
        Width="540"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">
    
    <Border Background="#2C2C2E" 
            CornerRadius="12"
            BorderBrush="#48484A"
            BorderThickness="1">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#3A3A3C"
                    CornerRadius="12,12,0,0" 
                    Padding="28,20,28,20"
                    BorderBrush="#48484A"
                    BorderThickness="0,0,0,1">
                <StackPanel>
                    <Path Data="M12,2 L15,8 L22,9 L17,14 L18,21 L12,18 L6,21 L7,14 L2,9 L9,8 Z"
                          Fill="#FF9F0A"
                          Width="28"
                          Height="28"
                          Stretch="Uniform"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Compatibility Notice" 
                               FontSize="22" 
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,6"/>
                    
                    <TextBlock Text="Please read before continuing" 
                               FontSize="13"
                               Foreground="#98989D"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto" 
                          Padding="28,20,28,20">
                <StackPanel>
                    <TextBlock TextWrapping="Wrap" 
                               LineHeight="22"
                               Foreground="White"
                               FontSize="14">
                        <Run FontWeight="SemiBold">Steam Debloat is incompatible with Millennium.</Run>
                        <LineBreak/><LineBreak/>
                        <Run>If you have Millennium installed, you must uninstall it completely before using Steam Debloat to avoid:</Run>
                        <LineBreak/><LineBreak/>
                    </TextBlock>

                    <Border Background="#3A3A3C"
                            CornerRadius="8"
                            Padding="14,14,14,14"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <Ellipse Width="5" Height="5" Fill="#FF453A" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="System crashes and instability" FontSize="13" Foreground="White"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <Ellipse Width="5" Height="5" Fill="#FF453A" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Loss of customizations" FontSize="13" Foreground="White"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <Ellipse Width="5" Height="5" Fill="#FF453A" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Configuration conflicts" FontSize="13" Foreground="White"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="5" Height="5" Fill="#FF453A" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Potential data corruption" FontSize="13" Foreground="White"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <CheckBox x:Name="ConfirmCheckBox" 
                              Foreground="White"
                              FontSize="13"
                              Margin="0,6,0,0">
                        <TextBlock TextWrapping="Wrap">
                            <Run>I confirm that I </Run>
                            <Run FontWeight="SemiBold">do not</Run>
                            <Run> have Millennium installed</Run>
                        </TextBlock>
                    </CheckBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#1C1C1E"
                    CornerRadius="0,0,12,12" 
                    Padding="20,16,20,16"
                    BorderBrush="#38383A"
                    BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="ExitButton"
                            Grid.Column="1"
                            Content="Exit Application"
                            Width="130"
                            Height="36"
                            Click="ExitButton_Click"
                            Background="#3A3A3C"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="13"
                            FontWeight="Medium"
                            Cursor="Hand"/>

                    <Button x:Name="ContinueButton"
                            Grid.Column="3"
                            Content="Continue"
                            Width="110"
                            Height="36"
                            Click="ContinueButton_Click"
                            IsEnabled="False"
                            Background="#0A84FF"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Cursor="Hand"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>